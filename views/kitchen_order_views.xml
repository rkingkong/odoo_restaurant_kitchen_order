<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree -->
    <record id="view_pos_kitchen_order_tree" model="ir.ui.view">
        <field name="name">pos.kitchen.order.tree</field>
        <field name="model">pos.kitchen.order</field>
        <field name="arch" type="xml">
            <tree string="Comandas de Cocina" decoration-success="state=='delivered'" decoration-warning="state=='printed'" decoration-danger="state=='cancelled'">
                <field name="name"/>
                <field name="pos_order_id"/>
                <field name="order_date"/>
                <field name="table_id"/>
                <field name="customer_name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="print_count"/>
                <button name="print_kitchen_order" type="object" icon="fa-print" string="Imprimir"/>
                <button name="mark_as_prepared" type="object" icon="fa-check" string="Preparada" attrs="{'invisible': [('state', '!=', 'printed')]}"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista Form -->
    <record id="view_pos_kitchen_order_form" model="ir.ui.view">
        <field name="name">pos.kitchen.order.form</field>
        <field name="model">pos.kitchen.order</field>
        <field name="arch" type="xml">
            <form string="Comanda de Cocina">
                <header>
                    <button name="print_kitchen_order" type="object" string="Imprimir Comanda" class="btn-primary" icon="fa-print"/>
                    <button name="mark_as_prepared" type="object" string="Marcar Preparada" attrs="{'invisible': [('state', '!=', 'printed')]}"/>
                    <button name="mark_as_delivered" type="object" string="Marcar Entregada" attrs="{'invisible': [('state', '!=', 'prepared')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="pos_order_id"/>
                            <field name="order_date"/>
                            <field name="table_id"/>
                            <field name="customer_name"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="print_count"/>
                            <field name="last_print_date"/>
                            <field name="session_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_pos_kitchen_order" model="ir.actions.act_window">
        <field name="name">Historial de Comandas</field>
        <field name="res_model">pos.kitchen.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay comandas de cocina registradas
            </p>
            <p>
                Las comandas se crean automáticamente al validar pagos en el POS
            </p>
        </field>
    </record>
    
    <!-- Menú -->
    <menuitem id="menu_pos_kitchen_order"
              name="Comandas de Cocina"
              parent="point_of_sale.menu_point_of_sale"
              action="action_pos_kitchen_order"
              sequence="20"/>
</odoo>
