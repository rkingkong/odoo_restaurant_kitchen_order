<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pos_kitchen_order_tree" model="ir.ui.view">
        <field name="name">pos.kitchen.order.tree</field>
        <field name="model">pos.kitchen.order</field>
        <field name="arch" type="xml">
            <tree string="Kitchen Orders">
                <field name="name"/>
                <field name="order_date"/>
                <field name="table_name"/>
                <field name="customer_name"/>
                <field name="state"/>
                <field name="print_count"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_pos_kitchen_order_form" model="ir.ui.view">
        <field name="name">pos.kitchen.order.form</field>
        <field name="model">pos.kitchen.order</field>
        <field name="arch" type="xml">
            <form string="Kitchen Order">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="order_date"/>
                            <field name="table_name"/>
                        </group>
                        <group>
                            <field name="customer_name"/>
                            <field name="user_id"/>
                            <field name="print_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_pos_kitchen_order" model="ir.actions.act_window">
        <field name="name">Kitchen Orders</field>
        <field name="res_model">pos.kitchen.order</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!-- Menu -->
    <menuitem id="menu_pos_kitchen_order"
              name="Kitchen Orders"
              parent="point_of_sale.menu_point_of_sale"
              action="action_pos_kitchen_order"
              sequence="50"/>
</odoo>
