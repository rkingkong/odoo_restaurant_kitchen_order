<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_inherit_kitchen" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.kitchen</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='receipt']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="auto_print_kitchen"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="auto_print_kitchen"/>
                        <div class="text-muted">
                            Automatically print kitchen orders when validating payment
                        </div>
                        <field name="enable_kitchen_reprint" attrs="{'invisible': [('auto_print_kitchen', '=', False)]}"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
